@{
  Layout = "_Layout";
}
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Edit Album for @Model["album"].Title</h1>
    <form action='/artist/@Model["artist"]/album/@Model["album"].Id/update' method="post">
      <div class="form-group">
        <label for="title">Album Name</label>
        <input type="text" name="title" class="form-control" value='@Model["album"].Title'>
      </div>
      <div class="form-group">
        <label for="year">Year</label>
        <input type="text" name="year" class="form-control" value='@Model["album"].Year'>
      </div>
      <div class="form-group">
        <label for="label">Label</label>
        <input type="text" name="label" class="form-control" value='@Model["album"].Label'>
      </div>
      <div class="form-group">
        <label for="img">Image Link</label>
        <input type="text" name="img" class="form-control" value='@Model["album"].Img'>
      </div>
        <input type="hidden" name="id" value='@Model["artist"]'>
        <input type="hidden" name="albumId" value='@Model["album"].Id'>
      <button type="submit" class="btn btn-primary btn-block">Add</button>
    </form>
  </div>
</div>